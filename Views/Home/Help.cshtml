@{
	ViewData["Title"] = "Help";
}
<!-- Title page -->
<!-- Content page -->
<section class="bg0 p-t-120 p-b-160">
	<div class="container">
		<div class="row">

			<!--Section: FAQ-->
			<section>
				<h2 class="text-center mb-4 pb-2 text-body fw-bold"><strong>FAQ</strong></h2>
				<p class="text-center mb-5">
					Find the answers for the most frequently asked questions below
				</p>

				<div class="row">
					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-paper-plane-o text-body pe-2"></i><strong> Is your order information secure?</strong></h6>
						<p>
							<strong><u>Absolutely!</u></strong> We work with top payment companies which
							guarantees
							your
							safety and
							security. All billing information is stored on our payment processing partner.
						</p>
					</div>

					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-pencil text-body pe-2"></i><strong> Can I delete my account?</strong></h6>
						<p>
							<strong><u>Yes, it is possible!</u></strong> You can delete your account anytime in your profile. Once the account is deleted, you will not be a member of the FPTBook anymore.
						</p>
					</div>

					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-user text-body pe-2"></i> <strong>Can I upgrade my account?</strong>
						</h6>
						<p>
							Currently, we only offer normal accounts. You can edit or delete your account at any time with no further obligation.
						</p>
					</div>

					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-rocket text-body pe-2"></i> <strong>Can I update my payment information?</strong>
						</h6>
						<p>
							Yes. Go to the billing section of your dashboard and update your payment
							information.
						</p>
					</div>

					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-home text-body pe-2"></i><strong>Can I refund the book?</strong> 
						</h6>
						<p><strong><u>Unfortunately no</u>.</strong> We do not issue full or partial refunds
							for any
							reason.</p>
					</div>

					<div class="col-md-6 col-lg-4 mb-4">
						<h6 class="mb-3 text-body"><i class="fa fa-book-open text-body pe-2"></i>
							<strong>Can I search and view book details without registering an account?</strong></h6>
						<p>
							Of course! We’re happy to offer a free plan to anyone who wants to try our
							service.
						</p>
					</div>
				</div>
			</section>
			<!--Section: FAQ-->
		</div>
</section>