@model IEnumerable<FPTBook.Models.OrderItem>
@{
    ViewData["Title"] = "Recorded Orders Detail";
}
<section class="bg0 p-t-120 p-b-80">
    <div class="container">
        <div class="row p-b-20">
            <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
                <div class="m-l-20 m-r-20 m-lr-0-xl">
                    <div class="flex-w flex-t p-b-13">
                        <div class="size-208">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Order detail records
                            </h4>
                        </div>
                    </div>
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head text-center">
                                <th>
                                    Order ID
                                </th>
                                <th>
                                    Book ID
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Author
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Total
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="table_row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Order.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Book.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Book.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Book.Author.Name)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(modelItem => item.Book.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        $@(item.Quantity*item.Book.Price)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <a asp-action="Record"type="button" class="btn btn-warning" >Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>