@model IEnumerable<FPTBook.Models.Order>
@{
    ViewData["Title"] = "Recorded Orders";
}
<section class="bg0 p-t-120 p-b-80">
    <div class="container">
        <div class="row p-b-20">
            <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
                <div class="m-l-20 m-r-20 m-lr-0-xl">
                    <div class="flex-w flex-t p-b-13">
                        <div class="size-208">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Order records
                            </h4>
                        </div>
                    </div>
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head text-center">
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.State)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fullname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    Detail
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="table_row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderTime)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(modelItem => item.Total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fullname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        <a asp-action="OrderDetail" asp-route-id="@item.Id"><button type="button"
                                            class="btn btn-info"><span
                                                class="material-symbols-outlined">visibility</span></button></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>