@model IEnumerable<FPTBook.Models.Book>

@{
    ViewData["Title"] = "Index Book";
    Layout = "_StoreOwnerLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Books/Index">
                            <i class="fa fa-book"></i> Manage Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Authors/Index">
                            <i class="fa fa-user"></i> Manage Authors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Publishers/Index">
                            <i class="fa fa-building"></i> Manage Publishers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Order/Index">
                            <i class="fa fa-shopping-cart"></i> Manage Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Categories/RequestCategory">
                            <i class="fa fa-list"></i> Request Category
                        </a>
                    </li>
                </ul>
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="btn btn-dark btn-block">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <h2>Book's Information</h2>
    <hr>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.Publisher)</th>
                <th>@Html.DisplayNameFor(model => model.Poster)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.ReleaseDate)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>&ensp;Edit &ensp;&ensp; Details &ensp; Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Publisher.Name)</td>
                    <td><img src="~/uploads/@Html.DisplayFor(modelItem => item.Poster)" width="50" /></td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                    <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><span class="material-symbols-outlined">edit</span></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="material-symbols-outlined">visibility</span></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="material-symbols-outlined">delete</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
